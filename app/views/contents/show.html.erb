<%- model_class = Content -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:disp_id) %>:</strong></dt>
  <dd><%= @content.disp_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:view) %>:</strong></dt>
  <dd><%= @content.view %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @content.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:power) %>:</strong></dt>
  <dd><%= @content.power %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              contents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_path(@content), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_path(@content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
